options {
    directory "/var/cache/bind";
    
    listen-on { 192.168.1.10; 127.0.0.1; };
    allow-query { 192.168.1.0/24; 127.0.0.1; };
    
    forwarders {
        8.8.8.8;
        8.8.4.4;
    };
    
    dnssec-validation auto;
    
    recursion yes;
    allow-recursion { 192.168.1.0/24; 127.0.0.1; };
    
    auth-nxdomain no;
};
